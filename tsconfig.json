{
  "include": [
    "*.js",
    "*.ts",
    "__tests__",
    "__fixtures__",
    "scripts/*.ts",
    "packages/**/*.ts"
  ],
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./packages",
    "paths": {
      "@serlo/api": ["types/src"],
      "@serlo/authorization": ["authorization/src"],
      "~/*": ["server/src/*"]
    }
  },
  "ts-node": {
    "esm": true
  }
}
