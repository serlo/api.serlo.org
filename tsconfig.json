{
  "include": [
    "*.js",
    "*.ts",
    "__tests__/**/*.ts",
    "__fixtures__/**/*.ts",
    "scripts/*.ts",
    "packages/**/*.ts"
  ],
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "incremental": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./packages",
    "paths": {
      "@serlo/authorization": ["authorization/src"],
      "@serlo/db-migrations": ["db-migrations/src"],
      "~/*": ["server/src/*"]
    }
  },
  "ts-node": {
    "esm": true
  }
}
