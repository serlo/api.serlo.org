{
  "include": [
    "*.js",
    "*.ts",
    "*.cjs",
    "__tests__",
    "__fixtures__",
    "scripts/*.ts",
    "packages/**/*.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "importHelpers": false,
    "baseUrl": "./packages",
    "target": "es2019",
    "paths": {
      "@serlo/api": ["types/src"],
      "@serlo/authorization": ["authorization/src"],
      "~/*": ["server/src/*"]
    }
  },
  "ts-node": {
    "esm": true
  }
}
